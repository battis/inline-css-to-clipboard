{
  "name": "inline-sass",
  "version": "1.2.0",
  "description": "",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.mjs",
      "default": "./dist/esm/index.mjs"
    }
  },
  "target": "node",
  "engines": {
    "node": ">=12.17"
  },
  "author": {
    "name": "Seth Battis",
    "email": "seth@battis.net"
  },
  "license": "GPL-3.0",
  "scripts": {
    "build": "run-s build:*",
    "build:clean": "shx rm -rf dist",
    "build:commonjs": "babel src --extensions .ts --out-dir dist/cjs --source-maps --config-file @battis/babel-config/cjs.json",
    "build:esm": "babel src --extensions .ts --out-dir dist/esm --out-file-extension .mjs --source-maps --config-file @battis/babel-config/esm.json",
    "build:types": "tsc",
    "release": "run-s release:*",
    "release:build": "npm run build",
    "release:publish": "np --yolo --omit=dev"
  },
  "dependencies": {
    "inline-css": "^4.0.2",
    "node-html-parser": "^5.4.2",
    "sass": "^1.63.6"
  },
  "devDependencies": {
    "@battis/babel-config": "file:../babel-config",
    "@battis/eslint-config": "latest",
    "@battis/prettier-config": "latest",
    "@types/inline-css": "^3.0.1",
    "@types/node": "^20.4.1",
    "np": "^8.0.4",
    "npm-run-all": "^4.1.2",
    "shx": "^0.3.4"
  },
  "prettier": "@battis/prettier-config",
  "eslintConfig": {
    "extends": "@battis/eslint-config"
  }
}
